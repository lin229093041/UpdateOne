<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shopping_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.oracle.oaec.androidproject.ShoppingCartActivity">
    <!--顶部-->
    <include layout="@layout/shopping_top"
        />
    <!--顶部之下的可选项-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#00000000"
            android:layout_weight="1"
            android:text="订餐"
            android:id="@+id/shopping_tv_show_1"/>
        <Button
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="评价"
            android:id="@+id/shopping_tv_show_2"/>
        <Button
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:text="详情"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/shopping_tv_show_3"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="11"
        android:id="@+id/shopping_ry"></RelativeLayout>

</LinearLayout>
