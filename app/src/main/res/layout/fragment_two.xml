<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/two_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.oracle.oaec.androidproject.TwoFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <GridView
            android:id="@+id/gv_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="1"
            android:stretchMode="columnWidth"></GridView>


    </LinearLayout>

    <TextView
        android:id="@+id/kankan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:text="查看全部"
        android:textColor="#eb4f38"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/news_image"
            android:text="最新动态"
            android:textColor="#FF4500"
            android:textSize="20sp" />

        <GridView
            android:id="@+id/gv_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"></GridView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/story_image"
            android:text="特别故事"
            android:textColor="#FF4500"
            android:textSize="20sp" />

        <GridView
            android:id="@+id/gv_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"></GridView>
    </LinearLayout>


</LinearLayout>
